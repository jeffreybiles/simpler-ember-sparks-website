<div style="padding-left:25px" class="list-group-item">
  <%= link_to post do %>
    <div style="display: flex; justify-content: space-between;">
      <% if type == 'series' %>
        <span style="width: 40px; color: black;"><%= index %></span>
      <% end %>
      <span style="width: 100%;">
        <h4 class="media-heading" style="display: inline-block;">
          <%= post.display_title %>
        </h4>
      </span>
      <span style="width: 60px; color: black;">
        <span class="play-time">
          <%= post.readable_time %>
        </span>
      </span>
    </div>
  <% end %>
</div>
